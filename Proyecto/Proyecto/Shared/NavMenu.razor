<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Proyecto</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <AuthorizeView>
            <Authorized>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="RVehiculos" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Registrar Vehiculos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="RClientes" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Registrar Clientes
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="RReservas" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Reservar Vehiculo
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="RFacturas" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Modulo Cobros
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="LVehiculos" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Reporte Vehiculos
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="LBeneficios" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Reporte Beneficios
                    </NavLink>
                </li>
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="LDeudas" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Reporte Deudas
                    </NavLink>
                </li>
            </Authorized>
        </AuthorizeView>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
